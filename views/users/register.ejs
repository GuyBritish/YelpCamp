<% layout("layouts/boilerplate") %>
<h1> Register </h1>
<form action="/register" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <div class="mb-3">
            <label class="form-label" for="username"> Username </label>
            <input class="form-control" type="text" id="username" name="newUser[username]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="mb-3">
            <label class="form-label" for="email"> Email </label>
            <input class="form-control" type="email" id="email" name="newUser[email]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>

    <div class="mb-3">
        <div class="mb-3">
            <label class="form-label" for="password"> Password </label>
            <input class="form-control" type="password" id="password" name="newUser[password]" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
    </div>

    <div class="mb-3">
        <button class="btn btn-success"> Register </button>
    </div>

</form>