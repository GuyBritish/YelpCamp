<% layout("layouts/boilerplate") %>
    <div class="row">
        <h1 class="text-center"> Edit <%=camp.title%>'s Information </h1>
        <div class="col-6 offset-3">

            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" class="validated-form" novalidate>

                <div class="mb-3">
                    <label class="form-label" for="title"> Title </label>
                    <input class="form-control" type="text" id="title" name="newCamp[title]" value="<%=camp.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="location"> Location </label>
                    <input class="form-control" type="text" id="location" name="newCamp[location]" value="<%=camp.location%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                
                <input type="file" name="images" multiple>

                <!-- <div class="mb-3">
                    <label class="form-label" for="image"> Image Url </label>
                    <input class="form-control" type="text" id="image" name="newCamp[image]" value="< %=camp.image%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="price"> Campground Price </label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="newCamp[price]" value="<%=camp.price%>" required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
    
                <div class="mb-3">
                    <label class="form-label" for="description"> Description </label>
                    <textarea class="form-control" type="text" id="description" name="newCamp[description]"><%=camp.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info"> Update </button>
                    <a class="btn btn-warning" href="/campgrounds/<%=camp._id%>"> Cancel </a>
                </div>

            </form>

            <footer>
                <form action="/campgrounds/<%=camp._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger"> Delete Campground </button>
                </form>
            </footer>  

        </div>  
    </div>

